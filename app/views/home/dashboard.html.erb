<div class="container-fluid">
  <div class="row">

    <div class="col-5">
      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-light">
          <tr>
            <th class='tbl-head' colspan=6>UPCOMING EVENTS</th>
          </tr>
          <tr>
            <th>TITLE</th>
            <th>VENUE</th>
            <th>STATUS</th>
            <th>DATE</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |e| %>
            <tr>
              <th><%= e.name.capitalize %></th>
              <th><%= e.venue.capitalize %></th>
              <th><%= e.approved ? 'YES' : 'NO' %></th>
              <th><%= e.date.strftime('%F')%></th>
            </tr>
          <% end %>
          <tr>
            <th colspan=4>.....</th>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="offset-1 col-5">
      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-light">
          <tr>
            <th class='tbl-head' colspan=6>ELECTION RESULTS</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>

  </div>

  <div class="row">
    <div class="col-6">
      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-light">
          <tr>
            <th class='tbl-head' colspan=6>NEWS</th>
          </tr>
        </thead>
        <tbody>
          <% @news.each do |n| %>
            <tr>
              <td>
                <p>
                  <b><%= n.title.capitalize %></b>
                  <img src="<%= n.image.url %>"/>
                </p>
                <p><%= n.article %></p>
              </td>
            </tr>
          <% end %>
          <tr>
            <th colspan=4>.....</th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
